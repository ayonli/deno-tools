{
    "fmt": {
        "lineWidth": 100,
        "indentWidth": 4,
        "singleQuote": false,
        "semiColons": false,
        "newLineKind": "lf",
        "proseWrap": "preserve",
        "useBraces": "always",
        "spaceSurroundingProperties": true,
        "singleBodyPosition": "sameLine",
        "trailingCommas": "onlyMultiLine",
        "exclude": [
            "dist",
            "public",
            "node_modules"
        ]
    },
    "lint": {
        "include": [
            "src/"
        ],
        "exclude": [
            "dist",
            "node_modules"
        ],
        "rules": {
            "tags": [
                "recommended"
            ]
        }
    }
}
